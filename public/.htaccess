# Habilitar reescritura de URLs
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirigir www a no-www (opcional, descomenta si lo necesitas)
  # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
  
  # Forzar HTTPS (opcional, descomenta si lo necesitas)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Si la solicitud es para un archivo o directorio que existe, servir directamente
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Si la URL no termina en .html y el archivo .html existe, redirigir
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.*)$ $1.html [L]
  
  # Si la URL termina en /, intentar servir index.html en esa carpeta
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^(.*)$ $1/index.html [L]
  
  # Si no existe el archivo, redirigir a 404.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ /404.html [L]
</IfModule>

# Habilitar compresión
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache de archivos estáticos
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/json "access plus 1 month"
</IfModule>

# Seguridad - Prevenir acceso a archivos ocultos
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

